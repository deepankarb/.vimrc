execute pathogen#infect()
syntax on
filetype plugin indent on
set hlsearch
set tabstop=4
set shiftwidth=4
set ai
set nu

" Disable Arrow keys in Escape mode
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

" Disable navigation keys as well
map <del> <nop>
map <home> <nop>
map <end> <nop>
map <pageup> <nop>
map <pagedown> <nop>

" Disable Arrow keys in Insert mode
imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>

" Disable navigation keys as well
imap <del> <nop>
imap <home> <nop>
imap <end> <nop>
imap <pageup> <nop>
imap <pagedown> <nop>
